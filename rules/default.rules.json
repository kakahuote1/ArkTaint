  "transfers": [
    {
      "id": "transfer.map.set.value_to_base",
      "description": "map.set(key, value): value taints map base",
      "match": {
        "kind": "signature_contains",
        "value": "Map.set"
      },
      "from": "arg1",
      "to": "base"
    },
    {
      "id": "transfer.map.get.base_to_result",
      "description": "map.get(key): map base taints result",
      "match": {
        "kind": "signature_contains",
        "value": "Map.get"
      },
      "from": "base",
      "to": "result"
    },
    {
      "id": "transfer.list.add.arg0_to_base",
      "description": "list.add(value): value taints list base",
      "match": {
        "kind": "signature_contains",
        "value": "List.add"
      },
      "from": "arg0",
      "to": "base"
    },
    {
      "id": "transfer.queue.add.arg0_to_base",
      "description": "queue.add(value): value taints queue base",
      "match": {
