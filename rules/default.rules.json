      },
      "from": "arg0",
      "to": "base"
    },
    {
      "id": "transfer.array.pop.base_to_result",
      "description": "array.pop(): array base taints result",
      "match": {
        "kind": "signature_contains",
        "value": "Array.pop"
      },
      "from": "base",
      "to": "result"
    },
    {
      "id": "transfer.promise.then.base_to_arg0",
      "description": "promise.then(callback): promise value flows to callback first arg",
      "match": {
        "kind": "signature_contains",
        "value": "Promise.then"
      },
      "from": "base",
      "to": "arg0"
    },
    {
      "id": "transfer.reflect.get.base_to_result",
      "description": "Reflect.get(base,key): base field value flows to result",
      "match": {
        "kind": "signature_contains",
        "value": "Reflect.get"
      },
      "from": "base",
      "to": "result"
    }
  ]
