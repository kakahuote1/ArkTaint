{
  "schemaVersion": "1.0",
  "meta": {
    "name": "arktaint-default-rules",
    "description": "M0 default source/sink/transfer rules",
    "updatedAt": "2026-02-14"
  },
  "sources": [
    {
      "id": "source.local_name.primary",
      "enabled": true,
      "description": "Source-like local names for entry seed heuristics.",
      "profile": "seed_local_name",
      "target": "arg0",
      "tags": [
        "smoke",
        "seed"
      ],
      "match": {
        "kind": "local_name_regex",
        "value": "(taint_src|input|url|uri|path|query|param|params|msg|message|text|content|payload|token|password|pwd|phone|email|name|id|data)"
      }
    }
  ],
  "sinks": [
    {
      "id": "sink.keyword.axios",
      "profile": "keyword",
      "severity": "medium",
      "match": {
        "kind": "signature_contains",
        "value": "axios"
      }
    },
    {
      "id": "sink.keyword.fetch",
      "profile": "keyword",
      "severity": "medium",
      "match": {
        "kind": "signature_contains",
        "value": "fetch"
